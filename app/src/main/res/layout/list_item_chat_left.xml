<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="left">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        cardView:cardCornerRadius="8dp"
        cardView:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_chat_left"
            android:gravity="start"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/chat_message"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="0.7"
                android:fontFamily="@font/font_lob"
                android:padding="8dp"
                android:text="sdfsdfsdfsdfsdfsdfsdfsfsfsfsdfdfgdfgdfgdfgdfgdfgdgdgdgdfgdfgdfgdfgdfgdfgdgdfgdfgdfgdfgdgdfgdfgdgdgdfgdgdfgdfg"
                android:textColor="@color/black"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>