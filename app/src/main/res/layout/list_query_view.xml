<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background"
    android:layout_marginBottom="20dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:id="@+id/user_pic"
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        app:cardCornerRadius="100dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_pic1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/akhil1" />
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/query_name"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="16dp"
            android:fontFamily="@font/font_lob"
            android:layout_width="match_parent"
            android:text="123123123adsad"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/query_date"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/font_ral"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/query_status"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>